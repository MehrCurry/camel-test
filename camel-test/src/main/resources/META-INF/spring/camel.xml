<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <camelContext id="camel"
        xmlns="http://camel.apache.org/schema/spring" autoStartup="true">
        <route id="example-route" autoStartup="true">
            <description>Example Camel Route</description>
            <from uri="activemq:example.A" />
            <to uri="activemq:example.B" />
        </route>
        <route id="test-route" autoStartup="true">
            <description>Test Route</description>
            <from uri="file:///c:/tmp/in?noop=true" />
            <to uri="file:///c:/tmp/out" />
        </route>
        <route id="ftp-route" autoStartup="true">
            <description>Test Route</description>
            <from
                uri="ftp://ftpuser@zockoll.dyndns.org/in?delete=true&amp;password=tux88." />
            <to uri="jms://incoming" />
        </route>
        <route id="jmsTofile-route" autoStartup="true">
            <description>Test Route</description>
            <from uri="jms://incoming" />
            <to uri="file:/Users/guido/tmp/out" />
            <to uri="jcr://admin:admin@localhost:9090/repository/default"/>
        </route>
        <route id="eventAdmin">
            <from uri="eventadmin:*" />
            <to uri="stream:out" />
        </route>
        <!--
        <route id="logging">
            <from uri="paxlogging:camel" />
            <to uri="stream:out" />
        </route>
        -->
    </camelContext>

    <bean id="jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61616" />
    </bean>

    <bean id="pooledConnectionFactory" class="org.apache.activemq.pool.PooledConnectionFactory">
        <property name="maxConnections" value="8" />
        <property name="maximumActive" value="500" />
        <property name="connectionFactory" ref="jmsConnectionFactory" />
    </bean>

    <bean id="jmsConfig" class="org.apache.camel.component.jms.JmsConfiguration">
        <property name="connectionFactory" ref="pooledConnectionFactory" />
        <property name="transacted" value="false" />
        <property name="concurrentConsumers" value="10" />
    </bean>

    <bean id="activemq"
        class="org.apache.activemq.camel.component.ActiveMQComponent">
        <property name="configuration" ref="jmsConfig" />
    </bean>
</beans>
